{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJs",
    "types": ["node"],
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}