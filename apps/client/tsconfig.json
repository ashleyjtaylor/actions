{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src",
    ".next/types/**/*.ts",
    "_next/types/**/*.ts",
    "dist/types/**/*.ts"
  ],
  "compilerOptions": {
    "types": [
      "react"
    ],
    "outDir": "dist",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  }
}
